{
  "name": "terracost-vscode",
  "displayName": "TerraCost",
  "description": "Terraform infrastructure cost estimation and optimization directly in VSCode",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Cost Management",
    "Infrastructure"
  ],
  "keywords": [
    "terraform",
    "aws",
    "cost",
    "infrastructure",
    "optimization",
    "finops"
  ],
  "activationEvents": [
    "onLanguage:terraform",
    "onCommand:terracost.openPanel",
    "onCommand:terracost.calculateCosts",
    "onCommand:terracost.getSuggestions"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terracost.openPanel",
        "title": "Open TerraCost Panel",
        "category": "TerraCost"
      },
      {
        "command": "terracost.calculateCosts",
        "title": "Calculate Infrastructure Costs",
        "category": "TerraCost"
      },
      {
        "command": "terracost.getSuggestions",
        "title": "Get AI Cost Optimization Suggestions",
        "category": "TerraCost"
      },
      {
        "command": "terracost.refreshCosts",
        "title": "Refresh Cost Estimates",
        "category": "TerraCost"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "terracost",
          "title": "TerraCost",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "terracost": [
        {
          "id": "terracostPanel",
          "name": "Infrastructure Costs",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "terracost.refreshCosts",
          "when": "view == terracostPanel",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "terracost.calculateCosts",
          "when": "resourceExtname == tf",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "TerraCost",
      "properties": {
        "terracost.timeframe": {
          "type": "string",
          "enum": [
            "1m",
            "3m",
            "6m",
            "1y",
            "2y"
          ],
          "default": "1m",
          "description": "Default timeframe for cost calculations"
        },
        "terracost.showGhostText": {
          "type": "boolean",
          "default": true,
          "description": "Show inline cost estimates in .tf files"
        },
        "terracost.ghostTextColor": {
          "type": "string",
          "default": "#6a737d",
          "description": "Color for inline cost estimates"
        },
        "terracost.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python executable for TerraCost CLI"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@eslint/config-array": "^0.21.0",
    "@eslint/object-schema": "^2.1.6",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "glob": "^10.4.5",
    "rimraf": "^5.0.10",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "node-fetch": "^3.3.0"
  }
}
